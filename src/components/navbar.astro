---
import Menu from "./MenuBar";
import PathAnimation from "./PathAnimation";

export interface Props {
    animated: boolean;
}
const { animated } = Astro.props;

---

<div class="w-screen flex py-[70px] px-12 font-sans text-gray-200 text-xl fixed z-50 bg-gradient-to-b from-neutral-950 ">
    <div class={"w-1/2 flex gap-16 justify-start md:justify-end md:pr-40 self-start font-medium opacity-0 " + (animated ? "animate-[0.75s_fade-in_1.3s_ease-in_forwards]" : "animate-[0.75s_fade-in_0s_ease-in_forwards]")}>
        <Menu client:load/>
        <a href="/about" class="transition-all duration-300 hover:scale-105 hidden md:block hover:text-white ease-in-out">About</a>
        <a href="/ourteam" class="transition-all duration-300 hover:scale-105 hidden md:block hover:text-white ease-in-out">Our Team</a>
    </div>
    <a href="/">
        <PathAnimation animated={animated} client:load/>
    </a>
    <div class={"w-1/2 flex gap-16 justify-start pl-40 self-end font-medium opacity-0 " + (animated ? "animate-[0.75s_fade-in_1.3s_ease-in_forwards]" : "animate-[0.75s_fade-in_0s_ease-in_forwards]")}>
        <a href="/mrxEE" class="transition-all duration-300 hover:scale-105 hidden md:block hover:text-white ease-in-out">mrxEE</a>
        <a href="/innovation" class="transition-all duration-300 hover:scale-105 hidden md:block hover:text-white ease-in-out">Innovation</a>
        <a href="https://docs.murexrobotics.com" target="_blank" class="transition-all duration-300 hover:scale-105 hidden md:block hover:text-white ease-in-out">Docs</a>
    </div>
</div>