---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
import { SEO } from "astro-seo";
export interface Props {
	title: string;
	animated: boolean;
}

const { title, animated } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="We are MUREX Robotics, a high school underwater robotics team from Phillips Exeter Academy in Exeter, NH, competing in the MATE ROV competition under the Ranger division. We build open-source highly performant and integrated ROVs that match industry-level performance while maximizing cost-efficiency."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{title + " - MUREX Robotics"}</title>
		<SEO
			title={title + " - MUREX Robotics"}
			description="We are MUREX Robotics, a high school underwater robotics team from Phillips Exeter Academy in Exeter, NH, competing in the MATE ROV competition under the Ranger division. We build open-source, highly performant, and highly integrated ROVs that match industry-level performance while maximizing cost-efficiency."
			openGraph={{
				basic: {
					title: "MUREX Robotics. Attempt the impossible.",
					type: "website",
					image: "https://www.murexrobotics.com/images/logo.png",
				},
				article: {
					authors: ["MUREX Robotics Members"],
				},
				image: {
					alt: "MUREX Robotics",
				},
				optional: {
					description:
						"We are MUREX Robotics, a high school underwater robotics team from Phillips Exeter Academy in Exeter, NH, competing in the MATE ROV competition under the Ranger division. We build open-source, highly performant, and highly integrated ROVs that match industry-level performance while maximizing cost-efficiency.",
					locale: "en",
				},
			}}
			extend={{
				// extending the default link tags
				link: [{ rel: "icon", href: "/favicon.ico" }],
			}}
		/>
	</head>
	<body>
		<Navbar animated={animated} />
		<slot />
		<Footer />
		<style is:global>
			:root {
				overflow-x: hidden;
				margin: 0;
				padding: 0;

				--accent-gradient: linear-gradient(
					45deg,
					#d2d2d2,
					#ffffff 30%,
					white 60%
				);

				color-scheme: light, dark;

				font-synthesis: none;
				text-rendering: optimizeLegibility;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				-webkit-text-size-adjust: 100%;
			}
			html {
				font-family: system-ui, sans-serif;
				background-color: #1a1a1a;
			}
			.typed-cursor {
				display: none;
			}
			@font-face {
				font-family: "JetBrains Mono";
				src: url("/JetBrainsMono-Variable.ttf") format("opentype");
				font-display: auto;
				font-style: normal;
				font-stretch: normal;
			}
			main {
				margin: auto;
				padding: 1.5rem;
				width: 100vw;
			}
			.text-gradient {
				background-image: var(--accent-gradient);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-size: 400%;
				background-position: 0%;
			}
			.item {
				stroke: #fff;
				stroke-width: 1;
				stroke-linejoin: round;
				stroke-linecap: round;
			}
			@keyframes logo {
				0% {
					@apply top-1/2;
					@apply w-1/5;
				}
				100% {
					@apply top-[90px];
					@apply md:w-20;
					@apply w-16;
				}
			}
			@keyframes fade-in {
				0% {
					@apply opacity-0;
				}
				100% {
					@apply opacity-100;
				}
			}
		</style>
	</body>
</html>
